@model List<RegisterLoginApp_ASP_MVC.Models.ProductInCart>

@{
    ViewData["Title"] = "Sepetim";
}

<h2>Sepetim</h2>

@if (Model.Count == 0)
{
    <p>Sepetiniz boş.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Miktar</th>
                <th>Toplam</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C2")</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price * item.Quantity).ToString("C2")</td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <h4>Toplam: @(Model.Sum(x => x.Price * x.Quantity)).ToString("C2")</h4>
    </div>
}
